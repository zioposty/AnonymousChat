<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="566.0" prefWidth="791.0" style=" -fx-background-image: none" styleClass="main-background"
            stylesheets="style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.isislab.p2p.anonymouschat.ChatViewController">
    <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="791.0">
        <Menu mnemonicParsing="false" text="Room">
            <MenuItem fx:id="menuCreateRoom" mnemonicParsing="false" onAction="#createRoom" text="Create Room"/>
            <MenuItem fx:id="menuJoinRoom" mnemonicParsing="false" onAction="#joinRoom" text="Join new Room"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="menuQuit" mnemonicParsing="false" onAction="#closeApplication"
                      text="Quit AnonymousChat"/>
        </Menu>
    </MenuBar>
    <TabPane fx:id="chatTabs" layoutX="35.0" layoutY="86.0" maxWidth="420.0">
        <!--  Tab model
           <Tab text="chat 1">
               <content>
                  <TextArea editable="false" prefHeight="392.0" prefWidth="418.0" />
               </content>
            </Tab> -->
    </TabPane>
    <Label fx:id="titleChat" layoutX="34.0" layoutY="38.0" text="Chat">
        <font>
          <Font name="Impact" size="29.0"/>
        </font>
    </Label>
    <TextArea fx:id="messageField" layoutX="467.0" layoutY="86.0" prefHeight="106.0" prefWidth="275.0"/>
    <Label layoutX="467.0" layoutY="51.0" prefHeight="28.0" prefWidth="103.0" text="Message">
        <font>
          <Font name="Impact" size="23.0"/>
        </font>
    </Label>
    <Button layoutX="467.0" layoutY="199.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="57.0"
            prefWidth="122.0" text="Send"/>
    <Button layoutX="589.0" layoutY="199.0" mnemonicParsing="false" onAction="#broadcastMessage" prefHeight="57.0"
            prefWidth="150.0" text="Broadcast"/>
    <ListView layoutX="470.0" layoutY="352.0" prefHeight="200.0" prefWidth="200.0" fx:id="notificationList"
              onMouseClicked="#selectNotification"/>
    <Label layoutX="467.0" layoutY="318.0" prefHeight="28.0" prefWidth="140.0" text="Notifications">
        <font>
          <Font name="Impact" size="23.0"/>
        </font>
    </Label>
</AnchorPane>
